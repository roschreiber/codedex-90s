const response = await fetch('https://www.codedex.io/api/community/liveUsers/getLiveUsers');
const data = await response.json();
const totalUsers = data.totalUsers;

const playersResponse = await fetch('https://oyster-app-uilsb.ondigitalocean.app/players');
const playersData = await playersResponse.json();
const playersLength = playersData.length;

import CoolBox from "./CoolBox.astro";
---

<CoolBox 
  title="Online Members" 
  text={`Total Online: ${totalUsers}`} 
  borderColor="#ff9900"
/>

<CoolBox 
  title="Town Square Players" 
  text={`Total Players: ${playersLength}`} 
  borderColor="#00ff00"
/>

<script>
  async function fetchLiveUsers() {
    try {
      const response = await fetch('https://www.codedex.io/api/community/liveUsers/getLiveUsers');
      const data = await response.json();
      document.querySelector('#total-users').innerText = `Total Online: ${data.totalUsers}`;
      
      const playersResponse = await fetch('https://oyster-app-uilsb.ondigitalocean.app/players');
      const playersData = await playersResponse.json();
      document.querySelector('#total-players').innerText = `Total Players: ${playersData.length}`;
    } catch (error) {
      console.error('Error fetching live users:', error);
    }
  }

  setInterval(fetchLiveUsers, 15000);
</script>
